@model AfiliadosApp.Models.Affiliate

@{
    ViewData["Title"] = $"Deduciendo monto a {Model.Name}";
}

<section>
    <div class="row justify-content-center">
        <div class="col-md-3">
            <h4>Deduciendo monto a afiliado</h4>
            <form asp-action="DeductAmount" class="p-3 shadow shadow-lg">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="SpendedAmount" class="control-label"></label>
                    <input asp-for="SpendedAmount" class="form-control" />
                    <span asp-validation-for="SpendedAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Deducir" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index" class="btn btn-dark my-3">Volver</a>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
