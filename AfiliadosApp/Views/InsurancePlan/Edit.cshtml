@model AfiliadosApp.Models.InsurancePlan

@{
    ViewData["Title"] = $"Editando {Model.Description}";
}

<section>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h4>Editando Plan</h4>
            <form asp-action="Edit" class="p-3 shadow shadow-lg">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CoverageLimit" class="control-label"></label>
                    <input asp-for="CoverageLimit" class="form-control" />
                    <span asp-validation-for="CoverageLimit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index" class="btn btn-dark my-3">Volver</a>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
